<?xml version="1.0" encoding="UTF-8"?>
<ExtensionModel>
    
    <!-- Commands -->
    <Extension path="/MonoDevelop/Ide/Commands">
        <Command id="TestAddin.AddinCommands.CurrentVersion" 
                 _label="TestAddin (x.x.x)" 
                 defaultHandler="TestAddin.CommandHandlers.CurrentVersionMenuHandler" />
        <Command id = "TestAddin.AddinCommands.ShowThePad" 
                 _label = "--The Pad--" 
                 defaultHandler = "TestAddin.CommandHandlers.ThePadMenuHandler"/>
    </Extension>
    
    <!-- Main Tool Menu Entries -->
    <Extension path="/MonoDevelop/Ide/MainMenu/Tools">
        <SeparatorItem id="TestAddinSeparator" />
        <CommandItem id="TestAddin.AddinCommands.CurrentVersion" />
        <CommandItem id="TestAddin.AddinCommands.ShowThePad" />
    </Extension>
    
    <!-- Pads -->
    <Extension path="/MonoDevelop/Ide/Pads">
        <Pad id="TestAddin.gtk.ThePad" 
             _label="The Pad" 
             class="TestAddin.gtk.ThePad" 
             defaultStatus="Dockable" 
             defaultPlacement="ProjectPad/bottom" />
    </Extension>
    
</ExtensionModel>